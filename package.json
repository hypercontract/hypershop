    "config": "1.30.0",
    "cors": "2.8.4",
    "ejs": "2.5.9",
    "express": "4.16.3",
    "faker": "4.1.0",
    "hal": "1.2.0",
    "jsonld": "1.0.1",
    "lodash": "4.17.5",
