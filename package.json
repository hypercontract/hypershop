{
  "name": "cfha-api",
  "version": "1.0.0",
  "description": "Contract-First Hypermedia APIs: Example API ",
  "main": "index.js",
  "scripts": {
    "start": "ts-node index.ts",
    "postinstall": "tsc -p .",
    "test": "run-s test:local",
    "test:local": "run-s test-rest-local test-hypermedia-local test-semantic-local",
    "test-rest-local": "newman run ./postman/rest-api.json -g ./postman/globals-local.json",
    "test-hypermedia-local": "newman run ./postman/hypermedia-api.json -g ./postman/globals-local.json",
    "test-semantic-local": "newman run ./postman/semantic-api.json -g ./postman/globals-local.json",
    "test:test": "run-s test-rest-test test-hypermedia-test test-semantic-test",
    "test-rest-test": "newman run ./postman/rest-api.json -g ./postman/globals-test.json",
    "test-hypermedia-test": "newman run ./postman/hypermedia-api.json -g ./postman/globals-test.json",
    "test-semantic-test": "newman run ./postman/semantic-api.json -g ./postman/globals-test.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luchsamapparat/cfha-api.git"
  },
  "author": "Marvin Luchs <marvin@luchs.org>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/luchsamapparat/cfha-api/issues"
  },
  "homepage": "https://github.com/luchsamapparat/cfha-api#readme",
  "dependencies": {
    "body-parser": "1.18.2",
    "config": "1.30.0",
    "cors": "2.8.4",
    "ejs": "2.5.9",
    "express": "4.16.3",
    "faker": "4.1.0",
    "hal": "1.2.0",
    "jsonld": "1.0.1",
    "lodash": "4.17.5",
    "method-override": "2.3.10",
    "moment": "2.22.1",
    "mongodb": "3.0.10",
    "morgan": "1.9.0",
    "nedb": "1.8.0",
    "winston": "2.4.1"
  },
  "devDependencies": {
    "@types/cors": "2.8.3",
    "@types/express": "4.11.1",
    "@types/faker": "4.1.2",
    "@types/lodash": "4.14.107",
    "@types/method-override": "0.0.31",
    "@types/mongodb": "3.0.19",
    "@types/morgan": "1.7.35",
    "@types/nedb": "1.8.5",
    "@types/node": "9.6.6",
    "newman": "3.9.3",
    "npm-run-all": "4.1.2",
    "ts-node": "6.1.0",
    "tslint-config-luchsamapparat": "1.2.0",
    "typescript": "2.9.1"
  }
}
